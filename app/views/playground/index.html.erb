<h1>
    Choose Mode
</h1>

<div class="row mode_wrap">
  <div class="lesson-area">
    <div class="select-area d-flex">
        <div class="card mode_card col-lg-4" style="width: 18rem;">
            <img src="/icon/type.svg" class="card-img-top" alt="..." >
            <div class="card-body mode_content">
                <h5 class="card-title">Typing Practice</h5>
                <p class="card-text">Practice makes Perfect</p>
                <a href="/playground/typing" class="btn btn-primary">START</a>
                <div class="progress mt-3" id="typingModeBar" style="height: 5px;">
                  <div class="progress-bar bg-info" role="progressbar" style="width: 0%" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100"></div>
                </div>
            </div>
        </div>

        <div class="card mode_card col-lg-4" style="width: 18rem;">
            <img src="/icon/code.svg" class="card-img-top" alt="...">
            <div class="card-body mode_card_body">
                <h5 class="card-title">Typing Code</h5>
                <p class="card-text">Wanna be a Ruby Engineer?</p>
                <a href="/playground/coding" class="btn btn-primary">START</a>
                <div class="progress mt-3" id="codeModeBar"style="height: 5px;">
                  <div class="progress-bar bg-info" role="progressbar" style="width: 0%" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100"></div>
                </div>
            </div>
        </div>

        <div class="card mode_card col-lg-4" style="width: 18rem;">
          <div class="member-only">
            <img src="/icon/users.svg" class="card-img-top" alt="...">
            <div class="card-body">
              <h5 class="card-title">Typing Battle</h5>
              <p class="card-text">Let's Battle</p>
              <%= link_to "START", racing_index_path,	class: "btn btn-primary"%>
              <div class="progress mt-3" id="battleModeBar"style="height: 5px;">
                <div class="progress-bar progress-bar-striped " role="progressbar" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100" style="width: 100%"></div>
              </div>
            </div>
            <% unless current_user %>
              <div class="member-only-notice">
                <%= link_to "Click me for login", new_user_session_path %>
              </div>
            <% end %>
          </div>
        </div>

        <div class="card mode_card col-lg-4" style="width: 18rem;">
          <div class="member-only">
            <img src="/icon/edit.svg" class="card-img-top" alt="...">
            <div class="card-body">
              <h5 class="card-title">DIY</h5>
              <p class="card-text">Have fun!</p>
              <%= link_to "START", racing_index_path,	class: "btn btn-primary"%>
              <div class="progress mt-3" id="battleModeBar"style="height: 5px;">
                <div class="progress-bar progress-bar-striped " role="progressbar" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100" style="width: 100%"></div>
              </div>
            </div>
            <% unless current_user %>
              <div class="member-only-notice">
                <%= link_to "Click me for login", new_user_session_path %>
              </div>
            <% end %>
          </div>
        </div>

    </div>
  </div>
</div>