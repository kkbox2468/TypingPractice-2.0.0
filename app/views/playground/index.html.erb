  <h1>
    Choose Mode
  </h1>

  <div class="modeWrap  d-flex ">
    <div class="lesson-area">
      <div class="select-area  d-flex ">
          <div class="card" style="width: 18rem;">
              <img src="/img/TypingArticle.svg" class="card-img-top" alt="...">
              <div class="card-body">
                  <h5 class="card-title">Typing Practice</h5>
                  <p class="card-text">打字練習</p>
                  <a href="/playground/typing" class="btn btn-primary">START NOW</a>
              </div>
          </div>
      
          <div class="card " style="width: 18rem;">
              <img src="/img/TypingCode.svg" class="card-img-top" alt="...">
              <div class="card-body">
                  <h5 class="card-title">Typing Code</h5>
                  <p class="card-text">打code練習</p>
                  <a href="/playground/coding" class="btn btn-primary">START NOW</a>
              </div>
          </div>
      </div>
    </div>
  
    <% if current_user %>
      <div class="battle-area">
        <div class="card" style="width: 18rem;">
          <img src="/img/TypingBattle.svg" class="card-img-top" alt="...">
          <div class="card-body">
            <h5 class="card-title">Typing Battle</h5>
            <p class="card-text">與對手對戰</p>
            <%= link_to "START NOW", "#" ,	class: "btn btn-primary"%>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  