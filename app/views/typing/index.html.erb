<h1>Typing 關卡頁面</h1>
<ul>
  <li>
    <%= link_to  "新增關卡", new_typing_path, method: 'GET' %>
  </li>
</ul>

<table class="table table-info">
  <% n = 1 %>
  <% @articles.each do |article| %>
  <tr>
    <th scope="row">第<%= "#{n}" %>關</th>
    <td><%= link_to article.content, typing_path(article.id) %></td>
    <td><%= link_to "編輯", edit_typing_path(article.id) %></td>
    <td><%= link_to "刪除", typing_path(article.id), method: "DELETE" %></td>
  </tr>
  <% n += 1 %>
  <% end %>
</table>




<%# -------關卡卡片------- %>

  <% n = 1 %>
    <% @articles.each do |article| %>
<div class="card table table-info" style="width: 18rem;" >
    <div class="card-body">
      <h5 class="card-title">第<%= "#{n}" %>關</h5>
      <p class="card-text"><%= link_to article.content, typing_path(article.id) %></p>
      <a href="#" class="btn btn-primary">編輯</a>
      <a href="#" class="btn btn-primary">刪除</a>
    </div>
</div>
    <% n += 1 %>
  <% end %>