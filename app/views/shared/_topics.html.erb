<div class="lesson-select">
  <% n = 1 %>
  <div class=" card ">
    <% topics.each do |topic| %>
      <div class="card-body" style="width: 15rem">

        <% if @done_article.include?(topic.id) %>
          <div class="check-done">
            <img src="/icon/check-circle.svg" alt="">
          </div>
        <% end %>

        <h5 class="card-title">第<%= "#{n}" %>關</h5>
        <p class="card-text ellipsis"><%= topic.content %></p>
        <%= link_to "開始", send("#{type}_path", id: topic.id), class: "btn btn-primary d-flex justify-content-center w-50 mx-auto", id: "play-start" %>
      </div>
      <% n += 1 %>
    <% end %>
  </div>
</div>

