<h1>Coding 關卡頁面</h1>
<ul>
  <li>
    <%= link_to  "新增關卡", new_coding_path, method: 'GET' %>
  </li>
</ul>

<table class="table table-info">
  <% n = 1 %>
  <% @codes.each do |code| %>
  <tr>
    <th scope="row">第<%= "#{n}" %>關</th>
    <td><%= link_to code.content, coding_path(code.id) %></td>
    <td><%= link_to "編輯", edit_coding_path(code.id) %></td>
    <td><%= link_to "刪除", coding_path(code.id), method: "DELETE" %></td>
  </tr>
  <% n += 1 %>
  <% end %>
</table>